            // là trang chính câu hỏi load option chương
            $("#main-page-monhoc").on("change", function () {
                let mamonhoc = $(this).val();
                let id = $(this).data("tab");
                let html = "<option></option>";
                $.ajax({
                    type: "get",
                    url: "/admin/monhoc/DsChuong",
                    data: {
