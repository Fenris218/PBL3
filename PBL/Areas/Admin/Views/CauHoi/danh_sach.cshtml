                    dataType: "json",
                    success: function (data) {
                        if (data.code === 200 && data.dschuong)
                            data.dschuong.forEach((item) => {
                                html += `<option value="${item.ID}">${item.tenchuong}</option>`;
                            });
                        $(`#main-page-chuong[data-tab="${id}"]`).html(html);
