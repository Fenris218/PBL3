            function checkUser(id, email) {
                let result = true;
                $.ajax({
                    type: "post",
                    url: "/admin/nguoidung/CheckNguoiDung",
                    data: {
                        manguoidung: id,
                        email: email,
                    },
                    async: false,
                    dataType: "json",
