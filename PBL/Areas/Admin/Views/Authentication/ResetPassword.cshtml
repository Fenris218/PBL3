@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Page Content -->
<div class="row g-0 justify-content-center bg-body">
    <div class="hero-static col-sm-8 col-md-6 col-xl-4 d-flex align-items-center p-2 px-sm-0">
        <!-- Reset Password Block -->
        <div class="block block-rounded w-100 mb-0 overflow-hidden shadow-sm border">
            <div class="block-content block-content-full px-lg-5 px-xl-6 py-4 py-md-5 py-lg-6 bg-body-extra-light">
                <!-- Header -->
                <div class="mb-2 text-center">
                    <div class="link-fx fw-bold fs-1">
                        <span class="text-primary">Mật khẩu mới</span>
                    </div>
                    <p class="text-uppercase fw-bold fs-sm text-dark">Đặt lại mật khẩu</p>
                    <p class="fw-bold fs-sm text-muted">Nhập mật khẩu mới cho tài khoản của bạn</p>
                </div>
                <!-- END Header -->
                <!-- Success Message -->
                @if (TempData["Success"] != null)
                {
                    <div class="text-center mt-4">
                        <a href="/Admin/Authentication/Login" class="btn btn-success btn-lg">Đăng nhập</a>
                    </div>
                }
                else
                {
                    <!-- Reset Password Form -->
                    <form method="post" action="/Admin/Authentication/ResetPassword">
                        <input type="hidden" name="token" value="@ViewBag.Token" />

                        <div class="mb-3">
                            <div class="input-group input-group-lg">
                                <input type="password" class="form-control" name="password" id="password" placeholder="Mật khẩu mới" required />
                                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('password')">
                                    <i class="fa fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="mb-4">
                            <div class="input-group input-group-lg">
                                <input type="password" class="form-control" name="confirm" id="confirm" placeholder="Xác nhận mật khẩu" required />
                                <button type="button" class="btn btn-outline-secondary" onclick="togglePassword('confirm')">
                                    <i class="fa fa-eye"></i>
                                </button>
                            </div>
                        </div>

                        <div class="text-center mb-4">
                            <button type="submit" class="btn btn-hero btn-primary">
                                Cập nhật mật khẩu
                            </button>
                        </div>
                    </form>
                    <!-- END Reset Password Form -->
                }

            </div>
        </div>
        <!-- END Reset Password Block -->
    </div>
</div>
<!-- END Page Content -->

@section Scripts {
    <script>
        function togglePassword(id) {
            var input = document.getElementById(id);
            if (input.type === "password") {
                input.type = "text";
            } else {
                input.type = "password";
            }
        }
    </script>
}
